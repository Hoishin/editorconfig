{
	"name": "@hoishin/editorconfig",
	"version": "2.1.1",
	"description": "Hoishin's .editorconfig",
	"repository": "https://github.com/Hoishin/editorconfig",
	"license": "MIT",
	"author": "Hoishin <hoishinxii@gmail.com>",
	"bin": {
		"hec": "dist/bin.js",
		"hoishin-editorconfig": "dist/bin.js"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "del-cli dist && tsc && cpy .editorconfig dist --rename=editorconfig",
		"check-format": "prettier --check \"**/*.{ts,json,md,yml}\"",
		"lint": "eslint --ext .ts .",
		"release": "run-s test build && standard-version",
		"test": "run-s lint check-format"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.ts": [
			"eslint --fix",
			"prettier --write",
			"git add"
		],
		"*.{json,md,yml}": [
			"prettier --write",
			"git add"
		],
		"package.json": [
			"sort-package-json",
			"git add"
		]
	},
	"prettier": "@hoishin/prettierrc",
	"eslintConfig": {
		"extends": [
			"hoishin/typescript"
		]
	},
	"dependencies": {
		"tslib": "2.0.3"
	},
	"devDependencies": {
		"@hoishin/prettierrc": "2.2.0",
		"@hoishin/tsconfig": "2.0.0",
		"@types/node": "10.17.18",
		"@types/update-notifier": "4.1.0",
		"cpy-cli": "3.1.1",
		"del-cli": "3.0.0",
		"eslint": "6.8.0",
		"eslint-config-hoishin": "0.2.6",
		"husky": "4.2.3",
		"lint-staged": "10.1.0",
		"npm-run-all": "4.1.5",
		"prettier": "2.0.2",
		"sort-package-json": "1.40.0",
		"standard-version": "^7.0.0",
		"ts-node": "9.0.0",
		"typescript": "3.8.3"
	},
	"publishConfig": {
		"access": "public"
	}
}
