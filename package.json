{
	"name": "@hoishin/editorconfig",
	"version": "2.1.0",
	"description": "Hoishin's .editorconfig",
	"repository": "https://github.com/Hoishin/editorconfig",
	"license": "MIT",
	"author": "Hoishin <hoishinxii@gmail.com>",
	"files": [
		"dist"
	],
	"bin": {
		"hec": "dist/bin.js",
		"hoishin-editorconfig": "dist/bin.js"
	},
	"scripts": {
		"build": "del-cli dist && tsc && cpx .editorconfig dist/editorconfig",
		"lint": "eslint --ext .ts .",
		"check-format": "prettier --check \"**/*.{ts,json,md}\"",
		"test": "run-s lint check-format",
		"release": "run-s test build && standard-version"
	},
	"publishConfig": {
		"access": "public"
	},
	"prettier": "@hoishin/prettierrc",
	"dependencies": {
		"tslib": "1.10.0",
		"update-notifier": "3.0.1"
	},
	"eslintConfig": {
		"extends": [
			"hoishin/typescript"
		]
	},
	"devDependencies": {
		"@hoishin/prettierrc": "2.1.1",
		"@hoishin/tsconfig": "2.0.0",
		"@types/node": "10.17.3",
		"@types/update-notifier": "2.5.0",
		"cpx": "^1.5.0",
		"del-cli": "3.0.0",
		"eslint": "^6.6.0",
		"eslint-config-hoishin": "^0.2.5",
		"npm-run-all": "^4.1.5",
		"prettier": "1.18.2",
		"standard-version": "^7.0.0",
		"ts-node": "8.4.1",
		"typescript": "3.6.4"
	}
}
