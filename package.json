{
	"name": "@hoishin/editorconfig",
	"version": "2.1.1",
	"description": "Hoishin's .editorconfig",
	"repository": "https://github.com/Hoishin/editorconfig",
	"license": "MIT",
	"author": "Hoishin <hoishinxii@gmail.com>",
	"files": [
		"dist"
	],
	"bin": {
		"hec": "dist/bin.js",
		"hoishin-editorconfig": "dist/bin.js"
	},
	"scripts": {
		"build": "del-cli dist && tsc && cpx .editorconfig dist/editorconfig",
		"check-format": "prettier --check \"**/*.{ts,json,md,yml}\"",
		"lint": "eslint --ext .ts .",
		"release": "run-s test build && standard-version",
		"test": "run-s lint check-format"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.ts": [
			"eslint --fix",
			"prettier --write",
			"git add"
		],
		"*.{json,md,yml}": [
			"prettier --write",
			"git add"
		],
		"package.json": [
			"sort-package-json",
			"git add"
		]
	},
	"prettier": "@hoishin/prettierrc",
	"eslintConfig": {
		"extends": [
			"hoishin/typescript"
		]
	},
	"dependencies": {
		"tslib": "1.11.1",
		"update-notifier": "4.1.0"
	},
	"devDependencies": {
		"@hoishin/prettierrc": "2.1.1",
		"@hoishin/tsconfig": "2.0.0",
		"@types/node": "10.17.17",
		"@types/update-notifier": "4.1.0",
		"cpx": "^1.5.0",
		"del-cli": "3.0.0",
		"eslint": "^6.6.0",
		"eslint-config-hoishin": "^0.2.5",
		"husky": "^4.0.0",
		"lint-staged": "^10.0.0",
		"npm-run-all": "^4.1.5",
		"prettier": "1.19.1",
		"sort-package-json": "^1.22.1",
		"standard-version": "^7.0.0",
		"ts-node": "8.6.2",
		"typescript": "3.8.2"
	},
	"publishConfig": {
		"access": "public"
	}
}
